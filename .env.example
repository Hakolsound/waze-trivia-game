# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./backend/database/trivia.db

# ESP32 Communication
# For direct GPIO connection use: /dev/serial0 or /dev/ttyAMA0
# For USB connection use: /dev/ttyUSB0 or /dev/ttyACM0
ESP32_SERIAL_PORT=/dev/serial0
ESP32_BAUD_RATE=115200
ESP32_HTTP_PORT=8080

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=scanvcard-defb5
FIREBASE_PRIVATE_KEY_PATH=./config/firebase-key.json

# Game Configuration
DEFAULT_QUESTION_TIME=30
MAX_GROUPS=8
BUZZER_TIMEOUT=5000