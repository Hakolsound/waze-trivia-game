{
  "name": "pi-server-launcher",
  "version": "1.0.0",
  "description": "Pi Server Selection and Launch System",
  "main": "launcher.js",
  "scripts": {
    "start": "node launcher.js",
    "trivia": "node launcher.js --mode=trivia",
    "osc": "node launcher.js --mode=osc",
    "install-trivia": "cd ../backend && npm install",
    "install-osc": "cd ../osc-buzzer-server && npm install",
    "setup": "npm run install-trivia && npm run install-osc"
  },
  "dependencies": {
    "express": "^4.18.2",
    "inquirer": "^9.2.10",
    "child_process": "^1.0.2",
    "chalk": "^4.1.2",
    "figlet": "^1.6.0"
  }
}